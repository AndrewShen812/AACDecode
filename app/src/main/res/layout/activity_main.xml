<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gwcd.sy.aacdecode.MainActivity">

    <Button
        android:id="@+id/btn_main_dec_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickDecAAC"
        android:text="解码数据流" />

    <Button
        android:id="@+id/btn_main_dec_file"
        android:layout_toRightOf="@+id/btn_main_dec_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickDecFile"
        android:text="解码AAC文件" />
    <Button
        android:layout_toRightOf="@+id/btn_main_dec_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickStop"
        android:text="停止" />

    <TextView
        android:id="@+id/tv_main_desc"
        android:layout_toRightOf="@+id/btn_main_dec_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_main_dec_stream" />
</RelativeLayout>
